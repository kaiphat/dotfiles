Token.Keyword = "bold #afd7ff"
Token.Continuation = "#ffaf87"

# Named queries are queries you can execute by name.
[named queries]
get_timescaledb_sizes = '''SELECT
    short_table_name,
    ca.materialization_hypertable_name,
    ca.view_name mat_view_name,
    g.view_name,
    pg_size_pretty(table_size) AS table_size,
    pg_size_pretty(indexes_size) AS indexes_size,
    pg_size_pretty(total_size) AS total_size
FROM (
    SELECT
        table_name,
        short_table_name,
        pg_table_size(table_name) AS table_size,
        pg_indexes_size(table_name) AS indexes_size,
        pg_total_relation_size(table_name) AS total_size
    FROM (
        SELECT ('"' || table_schema || '"."' || table_name || '"') AS table_name,
        table_name short_table_name
        FROM information_schema.tables
    ) AS all_tables
    ORDER BY total_size DESC
) AS pretty_sizes
left join timescaledb_information.chunks c on c.chunk_name = pretty_sizes.short_table_name
left join timescaledb_information.continuous_aggregates ca on ca.materialization_hypertable_name = c.hypertable_name
left join timescaledb_information.continuous_aggregates g on g.hypertable_name = c.hypertable_name
limit 100'''
get_stats = "select now() - query_start duration, pid, query from pg_stat_activity where pg_stat_activity.query_start is not null order by duration desc limit 100"
get_stat_for_period = '''SELECT
	ROUND(mean_exec_time::NUMERIC, 2) AS mean,
	ROUND(total_exec_time::NUMERIC, 2) AS total,
	calls,
	ROUND((100 * total_exec_time / SUM(total_exec_time::NUMERIC) OVER ())::NUMERIC, 2) AS percentage_cpu,
	query
FROM pg_stat_statements
ORDER BY mean DESC
LIMIT 20'''
aaa = '''with
bh as (
  select "blockHeight", "distributionId" from reward_distribution
  where "payoutSystemId" = 'PPLNS'
  and "accountId" = $1
),
pb as (
  select * from processed_block pb
  where pb."blockHeight" not in (select "blockHeight" from bh)
  and pb."distributionId" in (select "distributionId" from bh)
),
s as (
    select pb."blockHeight", pb."distributionId", sum(mvws5.difficulty) from pb
    join mat_view_worker_statistics_5m mvws5
    on mvws5."accountId" = $1 and pb."blockHeight" = mvws5."blockHeight"
    group by pb."blockHeight", pb."distributionId"
),
r as (
    select rs.id "rewardId", * from s
    join account a on a.id = $1
    left join account_group ag ON ag.id = a."accountGroupId"
    left join reward_setting rs ON rs.id = ag."rewardSettingId"
)
insert into reward_distribution (
"accountId",
"blockHeight",
"rewardSettingId",
"amount",
"bonusAmount",
"finalAmount",
"finalBonusAmount",
"finalTotalAmount",
"finalFee",
"poolBonusAmount",
"status",
"distributionId",
"coin",
"sumAccountDiff",
"finalTotalAmountWithoutBoost",
"referralSettingId",
"referralAmount",
"type",
"parentId",
"payoutSystemId"
) select
$1,
r."blockHeight",
coalesce(r."customRewardSettingId", r."rewardId"),
'0',
'0',
'0',
'0',
'0',
'0',
'0',
'PROCESSED',
r."distributionId",
'BTC',
r."sum",
'0',
null,
'0',
'MINING_REVENUE',
null,
'PPLNS'
from r'''
aab = '''with
